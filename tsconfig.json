{
  "compilerOptions": {
    "target": "es5",                         
    "module": "ESNext",                     
    "lib": ["es7", "es2015"],               
    "declaration": true,                   
    "sourceMap": true,                     
    "outDir": "./dist",                    
    "strict": true,                        
    "noImplicitAny": true,                 
    "strictNullChecks": false,              
    "noUnusedLocals": true,                
    "noUnusedParameters": true,            
    "noImplicitReturns": true,             
    "moduleResolution": "node",            
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["./utils/*"]
    },                           
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}
